<h1>Listing news</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Site</th>
    <th>User</th>
    <th>Permission</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= news.title %></td>
    <td><%= news.content %></td>
    <td><%= news.site.name %></td>
    <td><%= news.user.email %></td>
    <td><%= news.permission %></td>
    <td><%= link_to 'Show', news %></td>
    <td><%= link_to 'Edit', edit_news_path(news) %></td>
    <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

