<!DOCTYPE html>
<html>
<head>
  <title>Condo Motion</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <style type="text/css">
  body {
  	background: #069;
  	color: #fff;
  }
  </style>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% if notice %>
		<div class="flash alert alert-info"><%= notice %></div>
	<% end %>
	<% if alert %>
  	<div class="flash alert"><%= alert %></div>
  <% end %>

	<div class="container-fluid">
		<%= render "sites/menu" %>
		<%= yield %>
	</div>

</body>
</html>