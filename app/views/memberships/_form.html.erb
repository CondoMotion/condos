<%= form_for(@membership) do |f| %>
  <% if @membership.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@membership.errors.count, "error") %> prohibited this membership from being saved:</h2>

      <ul>
      <% @membership.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :site %>
    <%= collection_select :membership, :site_id, current_company.sites, :id, :name %>
  </div>
  <div class="field">
    <%= label_tag "Email" %>
    <%= text_field_tag :email, @membership.user.try(:email) %>
  </div>
  <div class="field">
    <%= f.label :role_id %>
    <%= f.collection_select :role_id, current_company.roles.all, :id, :name %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", class: "btn" %>
  </div>
<% end %>
