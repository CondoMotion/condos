<h1>Hello World</h1>
<% if user_signed_in? %>
<h2>Owned Company: <%= current_user.owned_company.name unless current_user.owned_company.nil? %></h2>
<% end %> 

<p>Current Role: <%= current_role %></p>

<% if can? :create, @company %>
	<p>CREATE</p>
<% end %>

<% if can? :read, @company %>
	<p>READ</p>
<% end %>

<% if can? :update, @company %>
	<p>UPDATE</p>
<% end %>

<% if can? :destroy, @company %>
	<p>DESTROY</p>
<% end %>